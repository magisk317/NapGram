{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "Html.createElement",
    "jsxFragmentFactory": "Html.Fragment",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@napgram/app/*": [
        "./src/*"
      ]
    },
    "types": [
      "node",
      "vitest/globals"
    ],
    "noEmit": true,
    "outDir": "build",
    "plugins": [
      {
        "name": "@kitajs/ts-html-plugin"
      }
    ]
  },
  "include": [
    "src/**/*",
    "vitest.setup.ts",
    "build.ts"
  ],
  "exclude": [
    "node_modules",
    "tools/**"
  ]
}
