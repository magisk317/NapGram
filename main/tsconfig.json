{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react",
    "jsxFactory": "Html.createElement",
    "jsxFragmentFactory": "Html.Fragment",
    "paths": {
      "@napgram/feature-kit": [
        "../packages/feature-kit/src/index.ts"
      ],
      "@napgram/gateway-kit": [
        "../packages/gateway-kit/src/index.ts"
      ],
      "@napgram/infra-kit": [
        "../packages/infra-kit/src/index.ts"
      ],
      "@napgram/auth-kit": [
        "../packages/auth-kit/src/index.ts"
      ],
      "@napgram/media-kit": [
        "../packages/media-kit/src/index.ts"
      ],
      "@napgram/message-kit": [
        "../packages/message-kit/src/index.ts"
      ],
      "@napgram/marketplace-kit": [
        "../packages/marketplace-kit/src/index.ts"
      ],
      "@napgram/request-kit": [
        "../packages/request-kit/src/index.ts"
      ],
      "@napgram/runtime-kit": [
        "../packages/runtime-kit/src/index.ts"
      ],
      "@napgram/web-interfaces": [
        "../packages/web-interfaces/src/index.ts"
      ]
    },
    "types": [
      "node",
      "vitest/globals"
    ],
    "plugins": [
      {
        "name": "@kitajs/ts-html-plugin"
      }
    ]
  },
  "include": [
    "src/**/*",
    "vitest.setup.ts",
    "build.ts"
  ],
  "exclude": [
    "node_modules",
    "tools/**"
  ]
}