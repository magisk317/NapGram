{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "sourceMap": false,
    "moduleResolution": "Bundler",
    "outDir": "build",
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "@kitajs/ts-html-plugin"
      }
    ],
    "jsx": "react",
    "jsxFactory": "Html.createElement",
    "jsxFragmentFactory": "Html.Fragment",
    "noEmit": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/__tests__/**",
    "tests/**",
    "tools/**"
  ]
}