# 数据目录
DATA_DIR=./data
CACHE_DIR=./data/cache

# 日志配置
LOG_LEVEL=info
LOG_FILE_LEVEL=debug
LOG_FILE=./data/logs/app.log
OICQ_LOG_LEVEL=warn
TG_LOG_LEVEL=warn

# NapCat 连接配置（WebSocket）
# 示例：ws://napcat:3001 或 ws://localhost:3001
NAPCAT_WS_URL=

# Telegram Bot 配置（必填）
# 从 https://my.telegram.org 获取
TG_API_ID=
TG_API_HASH=
# 从 @BotFather 获取
TG_BOT_TOKEN=

# Telegram 连接配置
TG_CONNECTION=tcp
# TG_INITIAL_DCID=
# TG_INITIAL_SERVER=
TG_USE_TEST_DC=false
IPV6=false

# 管理员配置（用于接收掉线通知等系统消息）
# ADMIN_QQ: 管理员的 QQ 号
# ADMIN_TG: 管理员的 Telegram ID（可通过 @userinfobot 获取）
# ADMIN_QQ=
# ADMIN_TG=

# 代理配置（可选）
# PROXY_IP=
# PROXY_PORT=
# PROXY_USERNAME=
# PROXY_PASSWORD=

# 数据库配置（必填）
# 示例：postgresql://user:password@postgres:5432/napgram
DATABASE_URL=

# Web 服务配置
LISTEN_PORT=8080
# UI_PATH=./public
# WEB_ENDPOINT=http://localhost:8080
# INTERNAL_WEB_ENDPOINT=http://napgram:8080

# 功能开关
DISABLE_FILE_UPLOAD_TIP=false
ENABLE_FEATURE_MANAGER=false
POSTHOG_OPTOUT=true

# 转发模式配置
# 第一位：QQ -> TG，第二位：TG -> QQ
# 0 = 不显示昵称，1 = 显示昵称
SHOW_NICKNAME_MODE=11
FORWARD_MODE=11

# 自动撤回配置
# true = QQ 撤回时自动删除 TG 对应消息（默认）
# false = QQ 撤回时不删除 TG 消息
ENABLE_AUTO_RECALL=true

# 掉线通知配置
# true = 启用掉线通知（默认），向管理员发送 NapCat 掉线/重连消息
# false = 禁用掉线通知
ENABLE_OFFLINE_NOTIFICATION=true

# 掉线通知冷却时间（毫秒）
# 防止频繁通知骚扰，默认 3600000 (1小时)
OFFLINE_NOTIFICATION_COOLDOWN=3600000

# PostgreSQL 配置（仅在使用 docker compose 内置 postgres 时需要）
# 这些变量用于初始化 postgres 容器，需与 DATABASE_URL 保持一致
# POSTGRES_DB=napgram
# POSTGRES_USER=napgram_user
# POSTGRES_PASSWORD=secure_password_here

# 时区配置
# TZ=Asia/Shanghai

# 其他配置
# FFMPEG_PATH=/usr/bin/ffmpeg
# FFPROBE_PATH=/usr/bin/ffprobe
# TGS_TO_GIF=tgs_to_gif
# SIGN_API=
# SIGN_VER=
# CRV_API=
# CRV_VIEWER_APP=
# CRV_KEY=
# IMAGE_SUMMARY=
