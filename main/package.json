    "assets",
    "build"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsx build.ts",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
