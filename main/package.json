    "start": "prisma migrate deploy && node --enable-source-maps build/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "pretest": "DATABASE_URL=postgresql://dummy pnpm exec prisma generate --no-hints",
    "prisma": "prisma",
    "import": "ts-node tools/import"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
