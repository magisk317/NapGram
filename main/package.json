{
  "name": "@napgram/core",
  "version": "0.0.7",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "tsx build.ts",
    "type-check": "tsc --noEmit",
    "pretype-check": "DATABASE_URL=postgresql://dummy pnpm exec prisma generate",
    "postinstall": "DATABASE_URL=postgresql://dummy pnpm exec prisma generate",
    "start": "prisma migrate deploy && node --enable-source-maps build/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "pretest": "DATABASE_URL=postgresql://dummy pnpm exec prisma generate",
    "prisma": "prisma",
    "import": "ts-node tools/import"
  },
  "files": [
    "build",
    "assets"
  ],
  "devDependencies": {
    "@kitajs/ts-html-plugin": "^4.1.3",
    "@types/ejs": "^3.1.5",
    "@types/markdown-escape": "^1.1.3",
    "@types/node": "^25.0.2",
    "@types/pg": "^8.16.0",
    "@types/probe-image-size": "^7.2.5",
    "@types/tmp": "^0.2.6",
    "esbuild": "^0.27.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/static": "^8.3.0",
    "@kitajs/html": "^4.2.11",
    "@mtcute/core": "^0.27.3",
    "@mtcute/dispatcher": "^0.27.3",
    "@mtcute/markdown-parser": "^0.27.4",
    "@mtcute/node": "^0.27.3",
    "@prisma/adapter-pg": "7.1.0",
    "@prisma/client": "7.1.0",
    "fastify": "^5.6.2",
    "file-type": "^21.1.1",
    "jimp": "^1.6.0",
    "@naplink/naplink": "^0.0.1",
    "pg": "^8.16.3",
    "prisma": "7.1.0",
    "silk-wasm": "^3.7.1",
    "zod": "^4.1.13"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}