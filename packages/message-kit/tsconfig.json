{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "lib": [
            "ES2022"
        ],
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "declaration": true,
        "baseUrl": ".",
        "paths": {
            "@napgram/message-kit": [
                "./src/index.ts"
            ],
            "@napgram/feature-kit": [
                "../feature-kit/src/index.ts"
            ],
            "@napgram/media-kit": [
                "../media-kit/src/index.ts"
            ]
        },
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*",
        "../../main/src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}