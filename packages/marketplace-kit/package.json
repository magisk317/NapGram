{
    "name": "@napgram/marketplace-kit",
    "version": "0.1.4",
    "description": "Marketplace and installer utilities for NapGram plugins",
    "main": "./src/index.ts",
    "types": "./dist/src/index.d.ts",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/src/index.d.ts",
            "import": "./src/index.ts",
            "default": "./src/index.ts"
        },
        "./package.json": "./package.json"
    },
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "dev": "tsc -p tsconfig.json --watch"
    },
    "keywords": [
        "napgram",
        "marketplace",
        "installer"
    ],
    "author": "NapGram Team",
    "license": "MIT",
    "dependencies": {
        "@napgram/database": "workspace:*",
        "@napgram/infra-kit": "workspace:*",
        "@napgram/runtime-kit": "workspace:*",
        "fflate": "^0.8.2",
        "yaml": "^2.8.2"
    },
    "devDependencies": {
        "@types/node": "25.0.3",
        "typescript": "5.9.3"
    },
    "publishConfig": {
        "main": "./dist/src/index.js",
        "types": "./dist/src/index.d.ts",
        "exports": {
            ".": {
                "types": "./dist/src/index.d.ts",
                "import": "./dist/src/index.js",
                "default": "./dist/src/index.js"
            },
            "./package.json": "./package.json"
        }
    }
}
