{
    "name": "@napgram/database",
    "version": "0.1.0",
    "description": "Database abstraction layer for NapGram with Drizzle ORM",
    "main": "./src/index.ts",
    "types": "./dist/index.d.ts",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        },
        "./schema": {
            "types": "./dist/schema/index.d.ts",
            "import": "./dist/schema/index.js",
            "default": "./dist/schema/index.js"
        }
    },
    "publishConfig": {
        "main": "./dist/index.js",
        "types": "./dist/index.d.ts"
    },
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "lint": "eslint .",
        "test": "vitest --passWithNoTests",
        "type-check": "tsc --noEmit",
        "db:sync": "node scripts/sync-plugin-schemas.mjs",
        "db:generate": "pnpm db:sync && drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:push": "drizzle-kit push"
    },
    "keywords": [
        "napgram",
        "database",
        "orm",
        "drizzle"
    ],
    "author": "NapGram Team",
    "license": "MIT",
    "dependencies": {
        "drizzle-orm": "^0.45.1",
        "pg": "^8.16.3"
    },
    "devDependencies": {
        "@types/node": "25.0.3",
        "@types/pg": "^8.16.0",
        "drizzle-kit": "^0.31.8",
        "tsup": "^8.3.0",
        "typescript": "5.9.3",
        "vitest": "4.0.16"
    }
}
