{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@napgram/web-interfaces": [
                "./src/index.ts"
            ],
            "@napgram/infra-kit": [
                "../infra-kit/src/index.ts"
            ],
            "@napgram/runtime-kit": [
                "../runtime-kit/src/index.ts"
            ]
        },
        "plugins": [
            {
                "name": "@kitajs/ts-html-plugin"
            }
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}