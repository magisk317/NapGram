{
    "name": "@napgram/infra-kit",
    "version": "0.1.4",
    "description": "Infrastructure exports for NapGram plugins",
    "main": "./src/index.ts",
    "types": "./dist/src/index.d.ts",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/src/index.d.ts",
            "import": "./dist/src/index.js",
            "default": "./dist/src/index.js"
        },
        "./package.json": "./package.json"
    },
    "publishConfig": {
        "main": "./dist/index.js",
        "types": "./dist/src/index.d.ts",
        "exports": {
            ".": {
                "types": "./dist/src/index.d.ts",
                "import": "./dist/src/index.js",
                "default": "./dist/src/index.js"
            },
            "./package.json": "./package.json"
        }
    },
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "dev": "tsc -p tsconfig.json --watch"
    },
    "keywords": [
        "napgram",
        "infrastructure"
    ],
    "author": "NapGram Team",
    "license": "MIT",
    "dependencies": {
        "@napgram/qq-client": "workspace:^",
        "@napgram/telegram-client": "workspace:^",
        "@napgram/database": "workspace:*",
        "@sentry/node": "10.32.1",
        "drizzle-orm": "^0.45.1",
        "fastify": "5.6.2",
        "zod": "^4.3.4"
    },
    "devDependencies": {
        "@types/node": "25.0.3",
        "@types/pg": "^8.16.0",
        "drizzle-kit": "^0.31.8",
        "typescript": "5.9.3",
        "vitest": "4.0.16"
    }
}
