{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "lib": [
            "ES2022"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "bundler",
        "jsx": "react",
        "jsxFactory": "Html.createElement",
        "jsxFragmentFactory": "Html.Fragment",
        "resolveJsonModule": true,
        "declaration": true,
        "baseUrl": ".",
        "types": [
            "node"
        ],
        "paths": {
            "@napgram/infra-kit": [
                "packages/infra-kit/src/index.ts"
            ],
            "@napgram/message-kit": [
                "packages/message-kit/src/index.ts"
            ],
            "@napgram/feature-kit": [
                "packages/feature-kit/src/index.ts"
            ],
            "@napgram/runtime-kit": [
                "packages/runtime-kit/src/index.ts"
            ],
            "@napgram/runtime-kit/*": [
                "packages/runtime-kit/src/*"
            ],
            "@napgram/qq-client": [
                "packages/qq-client/src/index.ts"
            ],
            "@napgram/auth-kit": [
                "packages/auth-kit/src/index.ts"
            ],
            "@napgram/media-kit": [
                "packages/media-kit/src/index.ts"
            ],
            "@napgram/plugin-kit": [
                "packages/plugin-kit/src/index.ts"
            ],
            "@napgram/sdk": [
                "external/sdk/packages/sdk/src/index.ts"
            ],
            "@napgram/app/*": [
                "main/src/*"
            ]
        }
    }
}
