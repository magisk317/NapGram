{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "lib": [
            "ES2022"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "declaration": true,
        "baseUrl": ".",
        "types": [
            "node"
        ],
        "paths": {
            "@napgram/infra-kit": [
                "packages/infra-kit/src/index.ts"
            ],
            "@napgram/message-kit": [
                "packages/message-kit/src/index.ts"
            ],
            "@napgram/feature-kit": [
                "packages/feature-kit/src/index.ts"
            ],
            "@napgram/runtime-kit": [
                "packages/runtime-kit/src/index.ts"
            ]
        }
    }
}